{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "baseUrl": "./", // Root directory
    "paths": {
      "@/*": [
        "resources/js/*",
      ], // Aliases to simplify import paths in your Vue components
      "ziggy-js": [
        "./vendor/tightenco/ziggy"
      ]
    }
  },
  "include": [
    "resources/js/**/*.js",
    "resources/js/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}